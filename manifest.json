{
    "name": "Wayland Clipboard Inserter",
    "description": "Queries a specified url at a set interval and appends the response as a paragraph to the current page. To be used with wlclipserv.",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png"
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png"
        },
        "default_title": "Toggle Wayland Clipboard Inserter"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "clipboard@wayland"
        }
    }
}
